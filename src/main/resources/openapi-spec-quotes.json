{
  "swagger": "2.0",
  "info": {
    "title": "Quotes API",
    "description": "A simple API for managing quotes.",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "schemes": [
    "http"
  ],
  "paths": {
    "/random-quote": {
      "get": {
        "summary": "Get a random quote.",
        "operationId": "randomQuote",
        "responses": {
          "200": {
            "description": "A random quote.",
            "schema": {
              "type": "object",
              "properties": {
                "author": {
                  "type": "string"
                },
                "quote": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/quotes": {
      "get": {
        "summary": "Get all quotes.",
        "operationId": "allQuotes",
        "responses": {
          "200": {
            "description": "A list of all quotes.",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "author": {
                    "type": "string"
                  },
                  "quote": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new quote.",
        "operationId": "createQuote",
        "requestBody": {
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "author": {
                "type": "string"
              },
              "quote": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The quote was created.",
            "schema": {
              "type": "object",
              "properties": {
                "author": {
                  "type": "string"
                },
                "quote": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/quotes/{id}": {
      "get": {
        "summary": "Get a quote by ID.",
        "operationId": "quoteById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "The quote with the given ID.",
            "schema": {
              "type": "object",
              "properties": {
                "author": {
                  "type": "string"
                },
                "quote": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a quote by ID.",
        "operationId": "updateQuote",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "requestBody": {
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "author": {
                "type": "string"
              },
              "quote": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The quote with the given ID was updated.",
            "schema": {
              "type": "object",
              "properties": {
                "author": {
                  "type": "string"
                },
                "quote": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a quote by ID.",
        "operationId": "deleteQuote",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "The quote with the given ID was deleted."
          }
        }
      }
    },
    "/quotes/search": {
      "get": {
        "summary": "Search for quotes by author or book.",
        "operationId": "searchQuotes",
        "parameters": [
          {
            "name": "author",
            "in": "query",
            "type": "string"
          },
          {
            "name": "book",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of quotes that match the search criteria.",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "author": {
                    "type": "string"
                  },
                  "quote": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
